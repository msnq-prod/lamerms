{% extends "login/login_template.twig" %}
{% block content %}
    {% if googleAuthAvailable %}
    <a href="{{CONFIG.ROOTURL}}/login/oauth/google.php" class="btn btn-default btn-lg m-2 border shadow-sm"><img src="{{ CONFIG.ROOTURL}}/static-assets/img/login/google.svg" alt="" role="presentation" style="height: 1.2em; vertical-align: text-top;" /> Войти{% if signupEnabled %} или зарегистрироваться{% endif %} через Google</a><br/>
    {% endif %}
    {% if microsoftAuthAvailable %}
    <a href="{{CONFIG.ROOTURL}}/login/oauth/microsoft.php" class="btn btn-default btn-lg m-2 border shadow-sm"><img src="{{ CONFIG.ROOTURL}}/static-assets/img/login/microsoft.svg" alt="" role="presentation" style="height: 1.2em; vertical-align: text-top;" /> Войти{% if signupEnabled %} или зарегистрироваться{% endif %} через Microsoft</a><br/>
    {% endif %}
    {% if signupEnabled %}
    <a href="?signup" class="btn btn-default btn-lg m-2 border shadow-sm"><img src="{{ CONFIG.ROOTURL}}/static-assets/img/logoicon.png" alt="" role="presentation" style="height: 1.2em; vertical-align: text-top;" /> Создать учетную запись {{ CONFIG.PROJECT_NAME }}</a>
    <p>или</p>
    {% endif %}
    <div class="spinner-border" role="status" id="loadingOverlay" style="display: none;">
        <span class="sr-only">Загрузка...</span>
    </div>
    <form id="loginForm">
		<div id="errorMessageBox" class="alert alert-danger"></div>
		<input class="form-control form-control-lg" id="emailInput" autocomplete="username" placeholder="Логин или email" type="text" required style="margin-top: 10px; margin-bottom: 10px;" autofocus>
        <input class="form-control form-control-lg" id="passwordInput" placeholder="Пароль" autocomplete="current-password" type="password" required style="margin-top: 10px; margin-bottom: 10px;">
		<div style="width: 100%; text-align:right;">
            <button type="button" class="btn btn-default" id="passwordResetButton">Сбросить пароль</button>
            <button class="btn btn-secondary" type="submit" value="Submit">Войти</button>
		</div>
	</form>
	<script>
        $("#loginForm").submit(function(e){
            e.preventDefault();
            $("#loginForm").hide();
            $("#loadingOverlay").show();
            $.ajax({
                url: "../api/login/login.php",
                type: "POST",
                dataType: 'json',
                data: {"formInput" : $("#emailInput").val(),"password": $("#passwordInput").val()},
                success: function(result) {
                    if (result.result) {
                        window.location.href = result.response.redirect;
                    } else {
                        $("#loginForm").show();
                        $("#loadingOverlay").hide();
                        $("#errorMessageBox").html(result.error.message);
                        $("#errorMessageBox").show();
                    }
                },
                error: function(){
                    $("#loginForm").show();
                    $("#loadingOverlay").hide();
                    $("#errorMessageBox").html("Обновите страницу и проверьте подключение к интернету");
                    $("#errorMessageBox").show();
                }
            });
        });
        $('#passwordResetButton').click(function(){
            if ($("#emailInput").val().length <= 0) {
                $("#errorMessageBox").html("Введите ваше имя пользователя или email в поле, чтобы сбросить пароль.");
                $("#errorMessageBox").show();
                return;
            }
            $("#errorMessageBox").hide();
            $("#loginForm").hide();
            $("#loadingOverlay").show();
            $.ajax({
                url: "../api/login/forgotPassword.php",
                type: "POST",
                dataType: 'json',
                data: {"formInput" : $("#emailInput").val()},
                success: function(result) {
                    $("#loginForm").show();
                    $("#loadingOverlay").hide();
                    if (result.result) {
                        $("#errorMessageBox").html("Если учетная запись с указанным email существует, на него отправлена ссылка для сброса пароля. Проверьте почту и следуйте инструкциям.");
                        $("#errorMessageBox").show();
                    } else {
                        $("#errorMessageBox").html("Свяжитесь со службой поддержки для восстановления пароля");
                        $("#errorMessageBox").show();
                    }
                }, error: function(){
                    $("#loginForm").show();
                    $("#loadingOverlay").hide();
                    $("#errorMessageBox").html("Обновите страницу и проверьте подключение к интернету");
                    $("#errorMessageBox").show();
                }
            });

        });
	</script>
{% endblock %}
