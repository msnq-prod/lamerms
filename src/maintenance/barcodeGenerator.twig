{% extends "assets/template.twig" %}
{% block content %}
    <div class="row">
        <div class="col-12 col-md-12 col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Оборудование</h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <select class="form-control" multiple="multiple" placeholder="Выберите объекты для печати штрихкодов" id="assetSearch" lines>
                            {% for asset in preFetch %}
                                <option value="{{asset.assets_id}}" selected="selected">{{ asset.assets_tag|aTag }} | {{ asset.assetTypes_name}} ({{ asset.manufacturers_name }})</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Группы</h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <select class="form-control" multiple="multiple" placeholder="Выберите группы объектов для печати штрихкодов" id="assetGroups" lines>
                        </select>
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Пустые</h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="callout callout-default">
                            Используйте пустые штрихкоды для маркировки новых объектов, затем привяжите их к объектам {{ CONFIG.PROJECT_NAME }} позже.
                        </div>
                        <input type="number" class="form-control" name="numStickers" id="blanksInput" min="0" value="0" max="500" />
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-12 col-lg-4">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Настройки</h3>
                    <div class="card-tools pull-right">
<a href="{{ CONFIG.LINKS_USERGUIDEURL }}assets/asset-barcodes" target="_blank" type="button" class="btn btn-info btn-sm">Помощь</a>

                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-12">
                        <div class="text-muted">
                            <form id="settings">
                                <p class="text-sm">Тип штрихкода
                                    <b class="d-block">
                                        <select class="form-control" name="barcodeType">
                                            <option value="EAN_8">EAN 8 (не рекомендуется — только цифры)</option><!-- Cannot encode characters - numbers only -->
                                            <option value="EAN_13">EAN 13 (не рекомендуется — только цифры)</option><!-- Cannot encode characters - numbers only -->
                                            <option value="CODE_39">Code 39</option>
                                            <option value="CODE_93">Code 93</option>
                                            <option value="CODE_128">Code 128</option>
                                            <option value="UPC_E">UPC E (не рекомендуется — только цифры)</option><!-- Cannot encode characters - numbers only -->
                                            <option value="UPC_A">UPC A (не рекомендуется — только цифры)</option><!-- Cannot encode characters- numbers only -->
                                            <option value="QR_CODE" selected>QR-код</option>
                                        </select>
                                    </b>
                                </p>
                                <button type="button" class="btn btn-default generateButton" data-type="table">Сгенерировать таблицу штрихкодов</button>
                                <button type="button" class="btn btn-default generateButton" data-type="printout">Сформировать лист наклеек</button>
                                <hr/>
                                <p>Настройки листа наклеек</p>
                                <p class="text-sm">Тег
                                    <b class="d-block">
                                        <select class="form-control" name="tags">
                                            <option value="0">Скрыть</option>
                                            <option value="1" selected>Показывать</option>
                                        </select>
                                    </b>
                                </p>
                                <p class="text-sm">Тип
                                    <b class="d-block">
                                        <select class="form-control" name="typename">
                                            <option value="0" selected>Скрыть</option>
                                            <option value="1">Показывать</option>
                                        </select>
                                    </b>
                                </p>
                                <p class="text-sm">Mass
                                    <b class="d-block">
                                        <select class="form-control" name="mass">
                                            <option value="0">Hide</option>
                                            <option value="1" selected>Show</option>
                                        </select>
                                    </b>
                                </p>
                                <p class="text-sm">1<sup>st</sup> Definable Field
                                    <b class="d-block">
                                        <select class="form-control" name="definableField1">
                                            <option value="0" selected>Hide</option>
                                            <option value="1">Show</option>
                                        </select>
                                    </b>
                                </p>
                                <p class="text-sm">Length Colours<sup>1st Definable Field must be length</sup>
                                    <b class="d-block">
                                        <select class="form-control" name="lengthMode">
                                            <option value="0" selected>Disabled</option>
                                            <option value="1">Enabled</option>
                                        </select>
                                    </b>
                                </p>
                                <p class="text-sm">Show Business Name
                                    <b class="d-block">
                                        <input type="text" list="instanceNameOptionList" class="form-control" name="instanceName" />
                                        <datalist id="instanceNameOptionList">
                                            <option value="Hide">Hide</option>
                                            <option selected>{{ USERDATA.instance.instances_name }}</option>
                                        </datalist>
                                    </b>
                                </p>
                                <hr/>
                                <p class="text-sm">{{ USERDATA.instance.instances_name }} Logo
                                    <b class="d-block">
                                        <select class="form-control" name="instancelogo">
                                            <option value="0">Hide</option>
                                            <option value="1" selected>Show</option>
                                        </select>
                                    </b>
                                </p>
                                <p class="text-sm">Логотип {{ CONFIG.PROJECT_NAME }}
                                    <b class="d-block">
                                        <select class="form-control" name="adamrmslogo">
                                            <option value="0" selected>Скрыть</option>
                                            <option value="1">Показывать</option>
                                        </select>
                                    </b>
                                </p>
                                <p class="text-sm">Формат бумаги
                                    <b class="d-block">
                                        <select class="form-control" name="pagesize">
                                            <option value="A4" selected>A4</option>
                                        </select>
                                    </b>
                                </p>
                                <p class="text-sm">Наклеек на лист
                                    <b class="d-block">
                                        <select class="form-control" name="numStickers">
                                            <option value="8" selected>8 — стандарт</option>
                                            <option value="8cable">8 — для кабелей</option>
                                        </select>
                                    </b>
                                </p>
                            </form>
                        </div></div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="btn-group float-right">
                        <button type="button" class="btn btn-default generateButton" data-type="printout">Сформировать лист наклеек</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        $(document).ready(function () {
            $(".generateButton").click(function () {
                var assets = $("#assetSearch").val();
                var groups = $("#assetGroups").val();
                window.location="{{ CONFIG.ROOTURL }}/maintenance/barcodePrint.php?" + $('#settings').serialize() + "&ids=" + assets.join() + "&blanks=" + $("#blanksInput").val() + "&groups=" + groups.join() + "&type=" + $(this).data("type");
            });

            $("#assetSearch").select2({
                tags: false,
                multiple: true,
                theme: "bootstrap4",
                minimumInputLength: 1,
                width: '100%',

                minimumResultsForSearch: 1,
                placeholder: "Введите номера объектов для поиска",
                ajax: {
                    url: "{{ CONFIG.ROOTURL }}/api/barcodes/searchAsset.php",
                    dataType: "json",
                    type: "POST",
                    data: function (params) {
                        var queryParameters = {
                            term: params.term
                        }
                        return queryParameters;
                    },
                    processResults: function (data) {
                        if (data && data.result && data.response) {
                            return {
                                results: $.map(data.response, function (item) {
                                    return {
                                        text: aTag(item.assets_tag) + " | " + item.assetTypes_name + " (" + item.manufacturers_name + ")",
                                        id: item.assets_id
                                    }
                                })
                            };
                        } else return {
                            results: []
                        };
                    }
                }
            });
            $("#assetGroups").select2({
                tags: false,
                multiple: true,
                theme: "bootstrap4",
                minimumInputLength: 1,
                width: '100%',
                minimumResultsForSearch: 1,
                placeholder: "Введите название группы для поиска",
                ajax: {
                    url: "{{ CONFIG.ROOTURL }}/api/groups/search.php",
                    dataType: "json",
                    type: "POST",
                    data: function (params) {
                        var queryParameters = {
                            term: params.term
                        }
                        return queryParameters;
                    },
                    processResults: function (data) {
                        if (data && data.result && data.response) {
                            return {
                                results: $.map(data.response, function (item) {
                                    return {
                                        text: item.assetGroups_name,
                                        id: item.assetGroups_id
                                    }
                                })
                            };
                        } else return {
                            results: []
                        };
                    }
                }
            });
        });
    </script>
{% endblock %}
