# Core database connection for AdamRMS MVP
DB_HOSTNAME=db
DB_PORT=3306
DB_DATABASE=adam_rms
DB_USERNAME=adam_rms
DB_PASSWORD=secret

# Base URL used in generated links and QR payloads (no trailing slash)
CONFIG_ROOTURL=http://localhost:8080

# 64-character uppercase alpha-numeric secret for JWT/QR signatures
# Generate with: openssl rand -hex 32 | tr '[:lower:]' '[:upper:]'
CONFIG_AUTH_JWTKey=CHANGE_ME_TO_A_64_CHARACTER_SECRET

# Optional SMTP settings for warehouse notifications (uncomment to enable)
#CONFIG_EMAILS_ENABLED=Enabled
#CONFIG_EMAILS_PROVIDER=SMTP
#CONFIG_EMAILS_FROM_EMAIL=warehouse@example.com
#CONFIG_EMAILS_SMTP_SERVER=mail
#CONFIG_EMAILS_SMTP_PORT=1025

# Set to false to skip automatic seeding during container startup
#SEED_ON_START=true
